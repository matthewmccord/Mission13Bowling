@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1 style="text-align: center">Bowlers</h1>


<table class="table table-sm table-bordered table-hover">
    <thead>
        <tr>
            <th>FIRST NAME</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody class="table-hover">

        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>


                <td>@b.BowlerMiddleInit</td>


                <td>@b.BowlerLastName</td>


                <td>@b.BowlerAddress</td>


                <td>@b.BowlerCity</td>


                <td>@b.BowlerState</td>


                <td>@b.BowlerZip</td>


                <td>@b.BowlerPhoneNumber</td>
            </tr>
        }
    </tbody>

</table>

<div>
    <a asp-controller="Home" asp-action="AddBowler">Add a Bowler</a>
</div>